<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#b7393838"
    >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Área reserva:"
        android:id="@+id/areaReservaLabel"
        android:textColor="#ffffff"
        android:textSize="25dp"
        android:layout_marginTop="17dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Área total dos talhões:"
        android:id="@+id/areaTotalTalhoesLabel"
        android:layout_below="@+id/areaReservaLabel"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="94dp"
        android:textColor="#ffffff"
        android:textSize="25dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/areaReservaInput"
        android:textSize="25dp"
        android:textColor="#ffffff"
        android:layout_below="@+id/areaReservaLabel"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/areaTotalTalhoesInput"
        android:textColor="#ffffff"
        android:textSize="25dp"
        android:layout_below="@+id/areaTotalTalhoesLabel"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <com.androidplot.pie.PieChart
        android:id="@+id/mySimplePieChart"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_weight="1"
        androidPlot.title="Area dos talhoes"
        androidPlot.titleWidget.labelPaint.textSize="15dp"
        android:layout_below="@+id/areaTotalTalhoesInput"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="77dp" />


</RelativeLayout>